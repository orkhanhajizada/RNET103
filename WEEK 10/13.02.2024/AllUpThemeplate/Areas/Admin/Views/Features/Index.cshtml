@model IEnumerable<AllUpThemeplate.Models.Feature>

@{
    ViewData["Title"] = "Index";
}


<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Feature</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active ">
                <a asp-area="admin" asp-action="create" class="btn btn-sm btn-outline-dark ">Create New</a>
            </li>
        </ol>
        <table class="table" id="datatablesSimple">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImageUrl)
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <img style="height: 150px; width: 150px" src="@item.ImageUrl" alt="Image" />
                        
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mr-2">Edit</a> 
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</main>