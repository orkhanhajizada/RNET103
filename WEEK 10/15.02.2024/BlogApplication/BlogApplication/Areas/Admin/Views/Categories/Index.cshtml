@model IEnumerable<BlogApplication.Models.Category>

@{
    ViewData["Title"] = "Index";
} 
<main>
    <div class="container-fluid px-4">

        <hr style="margin-top:90px" />
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">     <a asp-area="admin" asp-action="create" class="btn btn-sm btn-outline-dark ">Create New</a></li>
        </ol>
           
        <table class="table" id="datatablesSimple">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MasterCategory)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MasterCategory.Title) 
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</main>