@model IEnumerable<BlogApplication.Models.Post>

@{
    ViewData["Title"] = "Index";
}

<main>
    <div class="container-fluid px-4">

        <hr style="margin-top:90px"/>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">
                <a asp-area="admin" asp-action="create" class="btn btn-sm btn-outline-dark ">Create New</a>
            </li>
        </ol>

        <table class="table" id="datatablesSimple">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Content)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </th>
                @* <th></th> *@
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>
                        <!-- Example single danger button -->
                        @* <div class="btn-group"> *@
                        @*   <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"> *@
                        @*     Action *@
                        @*   </button> *@
                        @*   <ul class="dropdown-menu"> *@
                        @*     <li><a asp-action="Edit" asp-route-id="@item.Id" class="dropdown-item">Edit</a></li> *@
                        @*     <li><a asp-action="Details" asp-route-id="@item.Id" class="dropdown-item">Details</a></li> *@
                        @*     <li><a asp-action="Delete" asp-route-id="@item.Id" class="dropdown-item">Delete</a></li> *@
                        @*     <li><a asp-area="admin" asp-action="create" asp-controller="images" asp-route-id="@item.Id" *@
                        @*            class="dropdown-item">Upload</a></li> *@
                        @*   </ul> *@
                        @* </div> *@
                        
                        <action id="@item.Id" text="Action" controller-name="posts"></action>
                        @* <email mail-to="orxan">Send email</email> *@
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</main>